<%- include('partials/header') %>

<section class="section-head">
  <h1><%= t('checkout.title') %></h1>
</section>

<div class="grid checkout-grid">
  <div>
    <h3><%= t('checkout.shipping_info') %></h3>
    <form action="/checkout" method="post" class="form-col">
      <label><%= t('checkout.full_name') %></label>
      <input type="text" name="shipping_name" required />
      <label><%= t('checkout.phone') %></label>
      <input type="text" name="shipping_phone" required />
      <label><%= t('checkout.address') %></label>
      <textarea name="shipping_address" rows="4" required></textarea>
      <button class="btn" type="submit"><%= t('checkout.place_order') %></button>
    </form>
  </div>
  <div>
    <h3><%= t('checkout.summary') %></h3>
    <ul class="summary-list">
      <% items.forEach(i => { %>
      <li>
        <span><%= i.name %> Ã— <%= i.quantity %></span>
        <strong><%= vnd(i.price * i.quantity) %></strong>
      </li>
      <% }) %>
    </ul>
    <p class="price big"><%= t('cart.total') %>: <%= vnd(total) %></p>
  </div>
</div>

<%- include('partials/footer') %>
